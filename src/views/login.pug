extends layout

block header 
    a(href="/home") 
        h1 ROCIO MACHIMBARRENA

    nav.profile-nav
    ul
        li
            a(href="/purses") CATÁLOGO
        li
            a(href="/login") INICIA SESIÓN

block content 
    h1 INICIA SESIÓN 
    form(action="/login", method="post")
        label(for="email") 
        input(id="email", type="text", name="email" placeholder="EMAIL")
        label(for="password") 
        input(id="password", type="password", name="password" placeholder="CONTRASEÑA")
        button(type="submit") INICIAR SESIÓN
    a(href="/register") 
        button(type="button") REGÍSTRATE